
<mvc:View
    controllerName="com.asint.interns.project2.controller.Chart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls">

    <Page title="Supplier Orders Chart">

        <headerContent>
            <Button text="Bar Chart" press="onShowBarChart" />
            <Button text="Line Chart" press="onShowLineChart" />
            <Button text="Pie Chart" press="onShowPieChart" />
        </headerContent>

        <viz:VizFrame
            id="idVizFrame"
            width="100%"
            height="500px"
            vizType="bar">
        </viz:VizFrame>

    </Page>

</mvc:View>
